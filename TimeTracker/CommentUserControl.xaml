<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TimeTracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:DataSource="using:DataSource"
    x:Class="TimeTracker.CommentUserControl"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" Width="500" Height="200" LostFocus="UserControl_LostFocus_1">
    
	<UserControl.DataContext>
		<DataSource:TimeEntry/>
	</UserControl.DataContext>
    
    <Border x:Name="commentPopup" BorderBrush="#FF7F7F7F" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" Background="White" Padding="5">
		<StackPanel>
			<TextBlock TextWrapping="Wrap" Text="Would you like to add a comment for the time entry?" FontSize="18.667" Margin="10,10,10,20"/>
			<TextBox x:Name="commentBox" TextWrapping="Wrap" Margin="10,0" Foreground="Black" Height="90" />
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
				<Button Content="save" HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="0,10,7,10" Click="saveComment" Width="100"/>
				<Button Content="cancel" HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="0,10,7,10" Click="cancelComment" Width="100"/>
			</StackPanel>
		</StackPanel>
	</Border>
</UserControl>
