<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:DataSource="using:DataSource"
    x:Class="TimeTracker.CommentUserControl"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" Width="500" Height="200">
    
	<UserControl.DataContext>
		<DataSource:TimeEntry/>
	</UserControl.DataContext>
    
    <Border x:Name="commentPopup" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Background="White" Padding="5">
		<StackPanel>
			<TextBlock TextWrapping="Wrap" Text="Would you like to add a comment for the time entry?" FontSize="18.667" Margin="10,10,10,20"/>
			<TextBox x:Name="commentBox" TextWrapping="Wrap" Margin="10,0" Foreground="Black" Height="90" />
		</StackPanel>
	</Border>
</UserControl>
