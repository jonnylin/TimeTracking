<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TimeTracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:DataSource="using:DataSource"
    x:Class="TimeTracker.SubTaskUserControl"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <StackPanel Orientation="Horizontal">
		<TextBlock TextWrapping="Wrap" Text="{Binding Name}" FontFamily="Global User Interface"/>
		<TextBlock TextWrapping="Wrap" Text="{Binding Comment}"/>
		<TextBlock TextWrapping="Wrap" Text="{Binding UniqueId}"/>
		<Button x:Name="button" Content="&#xE00F;" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontFamily="Segoe UI Symbol" Click="Button_Click_1"/>
	</StackPanel>
</UserControl>
